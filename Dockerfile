FROM python:3.9

###############################################################################
# Install System Packages
###############################################################################

# Install system packages
RUN apt-get update && apt-get install -y \
    inotify-tools

###############################################################################
# Set the working directory and copy the code
###############################################################################

WORKDIR /src
COPY . .

###############################################################################
# Expose the webserve port
###############################################################################

EXPOSE 5000

###############################################################################
# Set defaut image command
###############################################################################

ENTRYPOINT ["python", "run.py", "--context-file=context.json", "--port=5000"]
